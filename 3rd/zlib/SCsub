Import('env')

env_zlib = env.Clone()

env_zlib.Append(CFLAGS=['-DZLIB_DLL'])
env_zlib.Append(LINKFLAGS=['/DEF:3rd/zlib/zlib.def'])

zlib_sources = [
	"adler32.c",
	"compress.c",
	"crc32.c",
	"deflate.c",
	"infback.c",
	"inffast.c",
	"inflate.c",
	"inftrees.c",
	"trees.c",
	"uncompr.c",
	"zutil.c",
]

lib = env_zlib.SharedLibrary("#bin/zlib1", zlib_sources)
