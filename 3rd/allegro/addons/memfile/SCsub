import glob
Import('env')

env_lib = env.Clone()

CFLAGS=[
    '-I','3rd/allegro/include',
    '-I','3rd/allegro/vs2013/include',
    '-I','3rd/allegro/addons/memfile',
    '-DWIN32',
    '-D_WINDOWS',
    '-DNDEBUG',
    '-DALLEGRO_MEMFILE_SRC',
    '-DALLEGRO_LIB_BUILD',
]
env_lib.Append(
    CFLAGS=CFLAGS,
    CXXFLAGS=CFLAGS
)

lib_sources = [
    "memfile.c",
]

env_lib.Prepend(LIBS=["allegro-5.2"])
lib = env_lib.SharedLibrary("#bin/allegro_memfile-5.2", lib_sources)
