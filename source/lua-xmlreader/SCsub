Import('env')

env_lib = env.Clone()
env_lib.Append(CFLAGS=['-DLUA_BUILD_AS_DLL'])

env_lib.Append(CFLAGS=[
	'-I','3rd/libxml2-2.9.4/include',
	'-I','3rd/libxml2-2.9.4/win32/VC10',
])

lib_sources = [
	"error.c",
	"xmlreader.c",
]

env_lib.Prepend(LIBS=["libxml2"])
env_lib.SharedLibrary("#bin/xmlreader", lib_sources)
